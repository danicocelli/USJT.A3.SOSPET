@model PROJETO.A3.USJT.Models.Recurso

@{
    ViewData["Title"] = "Excluir";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}
<div class="container mt-5">
    <h3>Deseja Excluir este Recurso/Insumo?</h3>

    <h6>Você tem certeza que deseja excluir este Recurso/Insumo do sistema? <b>Essa ação não poderá ser desfeita.</b></h6>
    <div>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
               Recurso/Insumo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeRecurso)
            </dd>
            <dt class="col-sm-2">
                Categoria
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria)
            </dd>
            <dt class="col-sm-2">
                Descrição
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                Usuário de Inclusão
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsuarioInclusao)
            </dd>
            <dt class="col-sm-2">
                Data de Inclusão
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataInclusao)
            </dd>
            <dt class="col-sm-2">
                Última alteração de Usuário
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsuarioAlteracao)
            </dd>
            <dt class="col-sm-2">
                Data de última Alteração
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataAlteracao)
            </dd>
        </dl>

        <form asp-action="Delete">
            <button asp-action="Index" class=" btn btn-secondary">Voltar para a lista</button>
            <input type="hidden" asp-for="RecursoId" />
            <input type="submit" value="Apagar" class="btn btn-danger" />
        </form>
    </div>
</div>
