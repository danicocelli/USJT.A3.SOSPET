@model PROJETO.A3.USJT.Models.Animal

@{
    ViewData["Title"] = "Excluir";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}
<div class="container mt-5">
<h3>Deseja Excluir este Pet?</h3>

    <h6>Você tem certeza que deseja excluir este pet do sistema? <b>Essa ação não poderá ser desfeita.</b></h6>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome do Animal
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeAnimal)
        </dd>
        <dt class = "col-sm-2">
           Data de Nascimento
        </dt>
        <dd class = "col-sm-10">
                @(((System.DateTimeOffset)Model.DataNascimento).ToString("dd/MM/yyyy"))
        </dd>
        <dt class = "col-sm-2">
            Data de Acolhimento
        </dt>
        <dd class = "col-sm-10">
                @(((System.DateTimeOffset)Model.DataAcolhimento).ToString("dd/MM/yyyy"))
        </dd>
        <dt class = "col-sm-2">
            Disponível? 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disponivel)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Local de Encontro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocalEncontro)
        </dd>
        <dt class = "col-sm-2">
            Observações Saúde
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservacaoSaude)
        </dd>
       @* <dt class = "col-sm-2">
            Voluntário
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VoluntarioResponsavelId)
        </dd>*@
        <dt class = "col-sm-2">
            Voluntário
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Voluntario)
        </dd>
        <dt class = "col-sm-2">
            Cor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cor)
        </dd>
       @* <dt class = "col-sm-2">
           Diretório
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiretorioImagem)
        </dd>*@
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaAnimal)
        </dd>
        <dt class = "col-sm-2">
            Gênero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
    </dl>
    
    <form asp-action="Delete">
            <button asp-action="Index" class=" btn btn-secondary">Voltar para a lista</button>
                <input type="hidden" asp-for="AnimalId" />
                <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
</div>
