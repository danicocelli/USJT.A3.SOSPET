@model PROJETO.A3.USJT.Models.Animal
@using PROJETO.A3.USJT.Models.Enums
@{
    var voluntarios = ViewBag.Voluntarios as List<Voluntario>;
}
@{
    ViewData["Title"] = "Cadastro de Animais";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}

<div class="container">
    <h3>Inclusão de PET</h3>


    <div class="row">
        <div class="container">
            <form asp-action="Create" asp-method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h5 class="mt-4">Dados Cadastrais</h5>
                <hr />
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="NomeAnimal" class="control-label">Nome do Animal</label>
                            <input asp-for="NomeAnimal" class="form-control" />
                            <span asp-validation-for="NomeAnimal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="DataNascimento" class="control-label">Data de Nascimento</label>
                            <input  type="date" asp-for="DataNascimento" class="form-control"  />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="Cor" class="control-label"></label>
                            <input asp-for="Cor" class="form-control" />
                            <span asp-validation-for="Cor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 mt-3">
                        <div class="form-group">
                            <div class="form-group">
                                <label asp-for="CategoriaAnimal" class="control-label">Espécie</label>
                                <select asp-for="CategoriaAnimal" class="form-control">
                                    @foreach (var value in Enum.GetValues(typeof(CategoriaAnimal)))
                                    {
                                        <option value="@value">@value</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoriaAnimal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 mt-3">
                        <div class="form-group">
                            <div class="form-group">
                                <label asp-for="Genero" class="control-label">Gênero</label>
                                <select asp-for="Genero" class="form-control">
                                    @foreach (var value in Enum.GetValues(typeof(Genero)))
                                    {
                                        <option value="@value">@value</option>
                                    }
                                </select>
                                <span asp-validation-for="Genero" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 mt-3">
                        <div class="form-group">
                            <label asp-for="DiretorioImagem" class="control-label">Anexar Imagem do PET</label>
                            <input asp-for="DiretorioImagem" type="file" class="form-control" />
                            <span asp-validation-for="DiretorioImagem" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3 mt-3">
                        <div class="form-group">
                            <div class="form-group">
                                <label asp-for="SituacaoAnimal" class="control-label">Situação do PET</label>
                                <select asp-for="SituacaoAnimal" class="form-control">
                                    @foreach (var value in Enum.GetValues(typeof(SituacaoAnimal)))
                                    {
                                        <option value="@value">@value</option>
                                    }
                                </select>
                                <span asp-validation-for="SituacaoAnimal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <h5 class="mt-5">Dados Informativos</h5>
                <hr />
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="LocalEncontro" class="control-label">Local de Encontro</label>
                            <input asp-for="LocalEncontro" class="form-control" />
                            <span asp-validation-for="LocalEncontro" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label asp-for="DataAcolhimento" class="control-label">Data de Acolhimento</label>
                            <input type="date" asp-for="DataAcolhimento" class="form-control" />
                            <span asp-validation-for="DataAcolhimento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label asp-for="DataDoacao" class="control-label">Data de Doação</label>
                            <input type="date" asp-for="DataDoacao" class="form-control" />
                            <span asp-validation-for="DataDoacao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="Voluntario" class="control-label">Voluntário</label>
                            <select asp-for="Voluntario" class="form-control">
                                @foreach (var value in voluntarios)
                                {
                                    <option value="@value.VoluntarioId">@value.Nome @value.Sobrenome</option>
                                }
                            </select>
                            <span asp-validation-for="VoluntarioId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mt-3">
                        <div class="form-group">
                            <label asp-for="ObservacaoSaude" class="control-label">Observações Sanitárias/Médicas</label>
                            <textarea asp-for="ObservacaoSaude" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="ObservacaoSaude" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mt-3">
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label">Descrição Adicional</label>
                            <textarea asp-for="Descricao" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 mt-3">
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-secondary">Voltar para lista</a>
                            <input type="submit" value="Salvar" class="btn btn-success" />
                            @*<div>
                                <a asp-action="Index" class=" btn btn-secondary">Voltar para Lista</a>
                                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.AnimalId">Editar</a>
                            </div>*@
                        </div>
                    </div>
               
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}