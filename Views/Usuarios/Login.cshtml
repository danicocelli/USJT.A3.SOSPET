<div class="container">

    <div class="row" style="margin-top: 50px;">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">

            <div class="card shadow mt-3" style="border-radius: 40px;">
                <div class="container mt-3 mb-3">
                    <div class="card-body">
                        <h2>
                            <img src="~/imgs/logo-app.png" style="height: 150px;" class="mt-3  mb-5" />
                        </h2>
                        <form asp-controller="Usuarios" asp-action="Authenticate" method="post">
                            <h3 class="text-center">
                                Portal do Voluntário
                            </h3>
                            <div class="mb-3 mt-4">
                                <label for="exampleInputEmail1" class="form-label">Usuário</label>
                                <input name="username" style="border-radius: 10px;" class="form-control"
                                       id="exampleInputEmail1" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-4">
                                <label for="exampleInputPassword1" class="form-label">Senha</label>
                                <input type="password" name="senha" style="border-radius: 10px;" class="form-control"
                                       id="exampleInputPassword1">
                            </div>
                            <p class="text-danger text-center mt-2">@ViewData["IncorrectLogin"]</p>
                            <div class="d-grid gap-2 col-8 mx-auto">
                                <button type="submit"  class="btn btn-outline-info"
                                        style="border-radius: 10px;">
                                    Acessar
                                </button>
                               
                            </div>
                            <div class="mb-4 mt-3 text-center text-muted">
                                <a style="text-decoration:none;"href="/">Voltar a Home</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
</div>

